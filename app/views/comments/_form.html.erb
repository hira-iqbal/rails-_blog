<%= form_with model: [@article,@article.comments.build] do |form| %>

  <div class= "form-group col-md-4">
   <%= form.label :commenter %> 
   <%= form.text_field :commenter,class:"form-control" %>
  </div>

  <div class="form-group col-md-4">
   <%= form.label :body %>
   <%= form.text_area :body,class:"form-control" %>
  </div>

  <div  class="form-group col-md-4">
   <%= form.label :status%>
   <%= form.select(:status, status_options,{include_blank: "please select a status"}, {class: "form-control"} ) %>
  </div>

  <div class="form-group col-md-4">
    <%= f.fields_for :image, resource.build_image do |image_subform| %>
      <%= image_subform.file_field :image %>
    <% end %>
  </div>

  <div  class="form-group col-md-4">
   <%= form.submit class:"form-control" %>
  </div>
<% end %>
