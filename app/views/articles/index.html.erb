<h1>Hello, Rails!</h1>
<table class="table table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Article_Tiltle</th>
      <th scope="col">Article_Body</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article|%>

    <tr>
      <td><%= link_to article.title, article %></td>
      <td><%= link_to article.body, article %></td>
    </tr>
      <!-- Title=>  <%= link_to article.title, article %><br> Body=>  <%= link_to article.body, article %><br><br> -->
    <% end %>
    <tr class="table-active">
      <td colspan="2"><%= link_to "New Article", new_article_path %></td>
    </tr>
  <tbody>
</table>

