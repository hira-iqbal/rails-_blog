<h1>Hello, Rails!</h1>
<table class="table table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Article Tiltle</th>
      <th scope="col">Article Body</th>
      <th scope="col">Article Image</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>

      <tr>
        <td><%= link_to(article.title, article) %></td>
        <td><%= link_to(article.body, article) %></td>
        <% article.images.each do |image|%>
          <td><%= image_tag(image, height:"100px", width:"100px") %></td>
        <% end %>
      </tr>
    <% end %>
    <tr class="table-active">
      <td colspan="3"><%= link_to("New Article", new_article_path) %></td>
    </tr>
  <tbody>
</table>

