<%= form_with(model: @user, url: url, method: method ) do |form| %>
  <div class= "form-row ">
    <div class= "form-group col-md-4">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder: "Name" %><br><br>
    </div>

    <div class= "form-group col-md-4">
      <%= form.label :surname %>
      <%= form.text_field :surname, class: "form-control", placeholder: "Surname" %><br><br>
    </div>
  </div>

  <div class= "form-row">
    <div class= "form-group col-md-4">
      <%= form.label :email %>
      <%= form.text_field :email, readonly: admin, class: "form-control",placeholder: "Email" %><br><br>
    </div>

    <div class= "form-group col-md-4">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %><br><br>
    </div>
  </div>

  <div class="form-group col-md-4">
    <%= image_tag user.image, style: "width:200px", height:"100px", if user.image.attached? %>
    <% end %>
    <%= form.label :image %>
    <%= form.file_field :image, class:"form-group" %>
  </div>

  <div class= "form-group col-md-4">
    <%= form.label :role_id %>
    <%= form.collection_select :role_id, Role.order(:name), :id, :name, {include_blank:""}, {class: "form-control"} %>
  </div><br>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
